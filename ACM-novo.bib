keywords = {self-avoiding walks, networks, network motifs, microtasks, crowdwork, crowdsourcing, causality, causal attribution, amazon mechanical turk}
}

@inproceedings{10.1145/3209415.3209451,
author = {Bernardes, Marciele Berger and de Andrade, Francisco Pacheco and Novais, Paulo},
title = {Smart Cities, data and right to privacy: a look from the Portuguese and Brazilian experience},
year = {2018},
isbn = {9781450354219},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3209415.3209451},
