author = {Yang, Xinying and Zhang, Ruide and Yue, Cong and Liu, Yang and Ooi, Beng Chin and Gao, Qun and Zhang, Yuan and Yang, Hao},
title = {VeDB: A Software and Hardware Enabled Trusted Relational Database},
year = {2023},
